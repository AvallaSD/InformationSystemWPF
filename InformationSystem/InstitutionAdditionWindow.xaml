<Window x:Class="InformationSystem.InstitutionAdditionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InformationSystem"
        mc:Ignorable="d"
        Title="InstitutionAdditionWindow" Height="160" Width="300">
	<Grid>
		<TextBox x:Name="name" 
				 HorizontalAlignment="Right" 
				 Height="20" 
				 Margin="0,20,20,0" 
				 TextWrapping="Wrap" 
				 VerticalAlignment="Top" 
				 Width="136"/>
		<TextBlock x:Name="textBlock1" 
				   HorizontalAlignment="Right"
				   Margin="20,20,165,0" 
				   Text="Название ведомства" 
				   TextWrapping="Wrap" 
				   VerticalAlignment="Top"/>
		<TextBlock x:Name="textBlock2" 
				   HorizontalAlignment="Right"
				   Margin="20,50,165,0" 
				   Text="Начальник" 
				   TextWrapping="Wrap" 
				   VerticalAlignment="Top"/>
		<ComboBox x:Name="chiefComboBox" 
				 HorizontalAlignment="Right" 
				 Height="20" 
				 Margin="0,50,20,0" 
				 VerticalAlignment="Top" 
				 Width="136"/>

		<Button x:Name="submitBtn" Content="Ок" HorizontalAlignment="Right" Margin="0,0,20,15" VerticalAlignment="Bottom" Width="55" Click="submitBtn_Click"/>

	</Grid>
</Window>
